.content
  .row
    .col-xs-3
    .col-md-6

      %p
        .fa.fa-pencil
        = link_to 'Compose New Message', new_user_private_message_path(@user)
      %p
        = link_to 'Sent Messages', user_sent_path(@user)
      %p
        = link_to 'Received Messages', user_received_path(@user)

      %h3 Opened Messages
      %table.table.table-striped.table-fixed-header
        %thead.header
          %tr
            %th
              From
            %th
              Subject
            %th
              Sent
            %th
              Read
        %tbody
          - @private_messages.each do |pm|
            %tr
              %td
                = pm.sender.name
              %td
                = pm.subject
              %td
                = pm.sent.to_s(:short)
              