= form_for @block do |f|
  - if @block.errors.any?
    #error_explanation
      %h2= "#{pluralize(@block.errors.count, "error")} prohibited this block from being saved:"
      %ul
        - @block.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :slab
    = f.text_area :slab
  .field
    = f.label :usr_id
    = f.number_field :usr_id
  .actions
    = f.submit 'Save'
