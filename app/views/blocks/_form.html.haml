= form_for @block do |f|
  - if @block.errors.any?
    #error_explanation
      %h2= "#{pluralize(@block.errors.count, "error")} prohibited this block from being saved:"
      %ul
        - @block.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    .field
      = f.label :body
      = f.text_area :body
    .actions
      = f.submit 'Save'
