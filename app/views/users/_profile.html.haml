-if current_user.present?
  #sidebar-wrapper
    .sidebar-nav
      %h4="#{current_user.name}" +"'s profile"
      =image_tag current_user.avatar.url(:thumb)
      .form-group
        = form_for @user, :url => users_path, :html => { :multipart => true } do |f|
          = f.file_field :avatar
          = f.submit "add photo"
